<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.imedias.rscc.controller.RequestSupportController">
    <BorderPane prefHeight="250.0" prefWidth="340.0">
        <center>
           <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
             <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="133.0" minWidth="10.0" prefWidth="110.0" />
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="165.0" />
             </columnConstraints>
             <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             </rowConstraints>
              <BorderPane.margin>
                 <Insets bottom="5.0" left="20.0" right="20.0" top="30.0" />
              </BorderPane.margin>
              <children>
                 <Label style="-fx-font-family: Arial;" text="Supporter:">
                    <tooltip>
                       <Tooltip text="Der Supporter registriert sich unter einem Namen. Diesen können Sie hier auswählen." />
                    </tooltip></Label>
                 <Label style="-fx-font-family: Arial;" text="Bildskalierung:" GridPane.rowIndex="1">
                    <tooltip>
                       <Tooltip text="Definiert in welcher Grösse das Bild übertragt wird." />
                    </tooltip></Label>
                 <ComboBox fx:id="cbx_imagescale" prefHeight="25.0" prefWidth="72.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                 <VBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
                    <children>
                       <ComboBox fx:id="cbx_supporter" prefHeight="25.0" prefWidth="168.0" />
                       <Hyperlink onAction="#onEditSupporterlistAction" text="Supporterliste bearbeiten..." />
                    </children>
                    <padding>
                       <Insets right="5.0" top="18.0" />
                    </padding>
                 </VBox>
              </children>
           </GridPane>
        </center>
        <top>
           <Label style="-fx-font-family: Arial; -fx-font-size: 18;" text="Support beziehen" BorderPane.alignment="CENTER">
              <font>
                 <Font size="18.0" />
              </font>
              <padding>
                 <Insets top="15.0" />
              </padding>
           </Label>
        </top>
        <bottom>
           <BorderPane BorderPane.alignment="CENTER">
              <left>
                 <Button mnemonicParsing="false" onAction="#onBackAction" text="Zurück" BorderPane.alignment="CENTER" />
              </left>
              <right>
                 <Button alignment="CENTER" mnemonicParsing="false" onAction="#onConnectAction" prefHeight="25.0" prefWidth="100.0" text="Verbinden" BorderPane.alignment="CENTER" />
              </right>
              <padding>
                 <Insets bottom="15.0" left="20.0" right="20.0" />
              </padding>
           </BorderPane>
        </bottom>
     </BorderPane>
</AnchorPane>
